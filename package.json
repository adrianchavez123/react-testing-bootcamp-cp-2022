		"@testing-library/user-event": "^13.5.0",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-scripts": "5.0.0",
		"styled-components": "^5.3.5",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
